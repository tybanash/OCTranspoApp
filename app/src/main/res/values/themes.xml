<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OCTranspoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_secondary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_statusbar</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/my_statusbar</item>

        <!-- Text color. -->
        <item name="android:textColor">@color/my_text</item>
        <!-- turn off action bar: -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>